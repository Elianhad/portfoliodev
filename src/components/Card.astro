---
import type { Pagina } from '../types';

interface Props {
  pagina:Pagina
}
const {pagina} = Astro.props
---
<div class="p-4 shadow-lg shadow-blue-900 my-4 bg-blue-950 rounded">
  <div class="rounded-lg overflow-hidden h-40 cursor-pointer relative">
    <div class='flex gap-2 absolute top-2 right-2'>
      {
        pagina.tech.map( tag => {
          return (
            <div class='bg-green-300 font-thin px-1 rounded text-green-900'>
              <span>#{tag}</span>
            </div>
              )
            })
      }
    </div>
    <a href={pagina.url_web}>
      <img src={pagina.imagen } alt={`Imagen ${pagina.nombre}`} class="object-cover object-center">
    </a>
  </div>
  <h3 class="mt-2 font-bold">{pagina.nombre}</h3>
  <div class='flex justify-around mt-3 p-2'>
    <div class="mt-3 flex gap-3">
      <div class='text-blue-200'>
        <!--icono Github -->
        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-brand-github" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
          <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
          <path d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5"></path>
       </svg>
      </div>
      <a href={pagina.url_github} class="hover:text-green-600 font-semibold">Ir a repositorio</a>
    </div>
    <div class="mt-3 flex gap-3">
      <div class='text-green-600'>
        <!--icono pagina -->
        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-world-www" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
          <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
          <path d="M19.5 7a9 9 0 0 0 -7.5 -4a8.991 8.991 0 0 0 -7.484 4"></path>
          <path d="M11.5 3a16.989 16.989 0 0 0 -1.826 4"></path>
          <path d="M12.5 3a16.989 16.989 0 0 1 1.828 4"></path>
          <path d="M19.5 17a9 9 0 0 1 -7.5 4a8.991 8.991 0 0 1 -7.484 -4"></path>
          <path d="M11.5 21a16.989 16.989 0 0 1 -1.826 -4"></path>
          <path d="M12.5 21a16.989 16.989 0 0 0 1.828 -4"></path>
          <path d="M2 10l1 4l1.5 -4l1.5 4l1 -4"></path>
          <path d="M17 10l1 4l1.5 -4l1.5 4l1 -4"></path>
          <path d="M9.5 10l1 4l1.5 -4l1.5 4l1 -4"></path>
       </svg>
      </div>
      <a href={pagina.url_web} class="hover:text-green-600 font-semibold">Visitar p√°gina</a>
    </div>

  </div>
 
</div>