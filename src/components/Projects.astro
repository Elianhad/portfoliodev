---
import Card from './Card.astro';
import type { Pagina } from '../types'

const response = await fetch(`${Astro.url}`+"api/paginas.json")
const paginas = await response.json() as Pagina[]
console.log(paginas)
---

<section class="mt-12 p-4 container lg:w-[60rem] mx-auto">
  <h3 class="text-center text-3xl font-semibold">Proyectos</h3>
  <div class="grid md:grid-flow-col gap-2 mt-8">
    {
      paginas.map( pagina => {
        return ( <Card pagina={pagina} /> )
      })
    }
  </div>
</section>